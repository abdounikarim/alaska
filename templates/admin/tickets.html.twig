<div class="tab-pane fade show active" id="tickets" role="tabpanel" aria-labelledby="tickets-tab">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Image</th>
            <th>Contenu</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.title }}</td>
                <td><img src="{{ asset('images/' ~ ticket.image) }}"></td>
                <td>{{ ticket.content|raw }}</td>
                <td>
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}">Voir</a>
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun billet trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn custom" href="{{ path('ticket_new') }}">Ajouter un billet</a>
</div>